{
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true
            }
        }
    },

    "forwardPorts": [8988],
    
    "postCreateCommand": "python3 main.py",

    "portsAttributes": {
        "8988": {
            "label": "WebAgg Matplotlib Demo",
            "onAutoForward": "openBrowser"
        }
    }
}